# CONFIGURACIÓN DE LA APLICACIÓN
NODE_ENV=development
APP_NAME=my-nest-app
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://localhost:3000

# Versión de la API
API_VERSION=v1
API_PREFIX=api

# BASE DE DATOS - PostgreSQL/MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=nestjs_db
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_AUTOLOAD=false
DB_SSL=false

# BASE DE DATOS - MongoDB (alternativa)
MONGODB_URI=mongodb://localhost:27017/nestjs_db
MONGODB_USER=admin
MONGODB_PASSWORD=admin

# REDIS (Cache/Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT - AUTENTICACIÓN
JWT_SECRET=tu_super_secret_key_cambiar_en_produccion
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=tu_refresh_secret_key
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# RATE LIMITING
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# LOGGING
LOG_LEVEL=debug
LOG_DIR=logs

# MAILER - SMTP
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu-email@gmail.com
MAIL_PASSWORD=tu-password-app
MAIL_FROM=noreply@tuapp.com
MAIL_SECURE=false

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_S3_BUCKET=tu-bucket-name

# CLOUDINARY (alternativa para imágenes)
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Google OAuth
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=tu-facebook-app-id
FACEBOOK_APP_SECRET=tu-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# SendGrid
SENDGRID_API_KEY=tu-sendgrid-api-key

# Twilio
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SWAGGER/DOCUMENTACIÓN
SWAGGER_ENABLED=true
SWAGGER_TITLE=Mi API NestJS
SWAGGER_DESCRIPTION=Documentación de la API
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# SEGURIDAD
BCRYPT_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Encriptación
ENCRYPTION_KEY=tu-encryption-key-32-caracteres

# WEBHOOKS
WEBHOOK_SECRET=tu-webhook-secret

# QUEUE/JOBS (Bull)
QUEUE_HOST=localhost
QUEUE_PORT=6379
QUEUE_PASSWORD=

# FRONTEND URL
FRONTEND_URL=http://localhost:4200

# UPLOADS
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads